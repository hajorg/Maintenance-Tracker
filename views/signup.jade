extends layout
block content
	.container
		.row
			h3.center.teal-text Sign Up
			.card-panel.col.s12.m6.offset-m3
				form(action='signup/process', method='post')
					.row
						.input-field.col.s12
							input#name.validate(type='text', name='name')
							label(for='name') Username
					.row
						.input-field.col.s12
							input#email.validate(type='email', name='email')
							label(for='email', data-error='Wrong') Email
					.row
						.input-field.col.s12
							input#phone(type='text', name='phone')
							label(for='phone', data-error='Wrong') Phone
					.row
						.input-field.col.s12
							input#password(type='password', name='password')
							label(for='password') Password
					.row
						.input-field.col.s12.offset-m4
							button.btn.waves-effect.waves-light(type='submit', name='action')
								| Register
								i.material-icons.right send
							.section
								div
									| Already have an account? 
									a(href='/signin') Sign In
