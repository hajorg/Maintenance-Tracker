extends layout
block content
	.container
	.row
		h3.center.teal-text Sign In
		.card-panel.col.s12.m6.offset-m3
			form(action='signin/process', method='post')
				.section
					.row
						.input-field.col.s12
							input#email.validate(type='email', name='email')
							label(for='email', data-error='Wrong') Email
					.row
						.input-field.col.s12
							input#password(type='password', name='password')
							label(for='password') Password
					.row
						.input-field.col.s12.offset-m4
							button.btn.waves-effect.waves-light(type='submit', name='action')
								| Login
								i.material-icons.right send
							.section
								div
									| Dont have an account? 
									a(href='/signup') Sign Up

	div#firebaseui-auth-container

	script(src='https://www.gstatic.com/firebasejs/ui/live/0.5/firebase-ui-auth.js')
	script(src='javascripts/authUser.js')
